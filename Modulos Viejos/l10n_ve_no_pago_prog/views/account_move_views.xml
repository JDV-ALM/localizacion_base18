<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_move_form_remove_pago_prog" model="ir.ui.view">
      <field name="name">account.move.form.remove_pago_prog</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="base_contable.view_move_sequence_number_form"/>
      <field name="arch" type="xml">
        <!-- 1) Quitar el selector Condición Factura -->
        <xpath expr="//field[@name='cond_fact']" position="replace"/>

        <!-- 2) Quitar el botón “Registrar Metodos de Pagos” -->
        <xpath expr="//button[@name='pago_prog']" position="replace"/>

        <!-- 3) Quitar la pestaña completa de “Registros de Pagos Programados” -->
        <!-- seleccionamos la <page> que contiene nuestro field igtf_ids -->
        <xpath expr="//page[.//field[@name='igtf_ids']]" position="replace"/>
      </field>
    </record>
  </data>
</odoo>

