<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Ocultar los botones estándar en la vista principal de account.move -->
  <record id="view_move_form_hide_buttons" model="ir.ui.view">
    <field name="name">account.move.form.hide.buttons</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- 1) Reset to Draft -->
      <xpath expr="//header/button[@name='button_draft']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <!-- 2) Cancel estándar -->
      <xpath expr="//header/button[@name='button_cancel']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>

  <!-- Ocultar el botón custom “Anular” inyectado por la localización -->
  <record id="view_move_form_hide_local_anular" model="ir.ui.view">
    <field name="name">account.move.form.hide.local.anular</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="resumen_alicuota_libros.resumen_account_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='anular']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>

</odoo>
