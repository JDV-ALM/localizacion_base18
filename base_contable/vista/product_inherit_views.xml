<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_product_template_inherit_form" model="ir.ui.view">
            <field name="name">view.product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="before">
                  <field name="tasa_dia" string="Tasa del dia (Bs)"/>
                </xpath>
                 <xpath expr="//div[@name='list_price_uom']" position="after">
                  <field name="habilita_precio_div" string="Habilita Precio REF?"/>
                  <field name="list_price2" string="Precio REF USD" invisible="habilita_precio_div!=True"/>
                </xpath>
                <xpath expr="//field[@name='supplier_taxes_id']" position="before">
                  <field name="standard_price_usd" string="Coste ($)"/>
                </xpath>
            </field>
        </record>


        <record id="view_product_product_inherit_form" model="ir.ui.view">
            <field name="name">view.product.product.inherit.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="before">
                  <field name="tasa_dia" string="Tasa del dia (Bs)"/>
                </xpath>
                
               <xpath expr="//div[@name='list_price_uom']" position="after">
                  <field name="habilita_precio_div" string="Habilita Precio REF?"/>
                  <field name="list_price2" string="Precio REF USD" invisible="habilita_precio_div!=True"/>
                </xpath>
                <xpath expr="//field[@name='supplier_taxes_id']" position="before">
                  <field name="standard_price_usd" string="Coste ($)"/>
                </xpath>
            </field>
        </record>

        

      
    </data>
</odoo>