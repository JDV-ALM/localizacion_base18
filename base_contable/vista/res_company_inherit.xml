<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cuentas_prove_clie" model="ir.ui.view">
        <field name="name">cuentas.prove.clie</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page string="Config. Cuentas Clientes/Proveedores" name="confg_cuentas">
                  <group name="grupo_1">
                    <group name="grupo_11" string="Cuentas Contables">
                        <field name="account_payable_aux_id" string="Cuenta por Pagar" invisible='0'/>
                        <field name="account_receivable_aux_id" string="Cuenta por Cobrar" invisible='0'/>
                    </group>
                  </group>
                </page>
            </xpath>

            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="price_ref_div_product" string="Usar precio indexado USD del producto en facturas?"/>
                <field name="currency_sec_id" string="Moneda Secundaria"/>
                <field name="percentage_cli_igtf" string="Porcentage de IGTF para clientes(%):"/>
                <!--field name="journal_transi_id" string="Diario Transitorio IGTF:"/-->
                <field name="account_igtf_id" string="Cuenta IGTF para Clientes:"/>
                <field name="account_igtf_p_id" string="Cuenta IGTF para Proveedores:"/>
                <field name="price_ref_div_product"/>
            </xpath>
            
        </field>
    </record>
</odoo>