<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- hacer herencia de purchase.purchase_order_form -->
    <record id="purchase_order_dual_currency_form" model="ir.ui.view">
        <field name="name">purchase.order.dual_currency</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']/.." position="inside">
                <field name="tax_today" readonly="state in ('purchase', 'done')"/>
            </xpath>
        </field>
    </record>

</odoo>