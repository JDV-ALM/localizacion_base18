<odoo>
  <data>
      <record id="view_retention_igtf_wizard" model="ir.ui.view">
            <field name="name">account.wh.igtf.list.form</field>
                <field name="model">account.wh.igtf.list</field>
                <field name="arch" type="xml">
                    <form string="Solicitud de Reporte de IGTF">
                        <field invisible="1" name="state"/>
                        <div invisible="state != 'choose'">
                            <group>
                                <group>
                                    <field name="company" string="Compañía" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_company"/>
                                    <field name="start_date" string="Fecha de inicio"/>
                                    <field name="end_date" string="Fecha Final"/>
                                </group>
                                <group>
                                    <field name="supplier" string="Facturas de Proveedor"/>
                                    <field name="customer" string="Facturas de Cliente"/>
                                </group>

                            </group>
                        </div>
                        <div invisible="state != 'get'">
                            <group>
                                <field name="name" colspan="4" invisible="1"/>
                                <field name="report" filename="name" colspan="4"/>
                            </group>
                        </div>
                        <footer invisible="state != 'choose'">
                            <button name="generate_retention_igtf_pdf" string="Imprimir PDF" type="object" class="btn-primary"/>
<!--                            <button name="generate_retention_igtf_xls" string="Imprimir XLS" type="object" class="btn-primary"/>-->
                            <button string="Cancel" class="btn-default" special="cancel" />
                        </footer>
                        <footer invisible="state != 'get'">
                            <button special="cancel" string="Cancel" class="oe_highlight" />
                        </footer>
                    </form>
                </field>
        </record>

        <record id="action_retention_igtf" model="ir.actions.act_window">
        	<field name="name">Solicitud de Reporte de IGTF</field>
        	<field name="res_model">account.wh.igtf.list</field>
        	<field name="binding_view_types">form</field>
        	<field name="view_mode">form</field>
        	<field name="view_id" ref="view_retention_igtf_wizard"/>
        	<field name="target">new</field>
    	</record>

<!--      <menuitem id="retention_igtf_details" name="Listado Retención IGTF" parent="l10n_ve_full.menu_venezuela_reporting" action="action_retention_igtf" sequence="201"/>-->

  </data>
</odoo>