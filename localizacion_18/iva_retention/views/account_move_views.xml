<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vat_retention_account_view_form2" model="ir.ui.view">
        <field name="name">vat.retention.account.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='operation_type']" position="after">
                <field name="vat_ret_id" invisible="move_type=='entry'"/>
                <field name="vat_ret_aux_id" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>