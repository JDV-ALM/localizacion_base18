<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="isrl_retention_account_view_form2" model="ir.ui.view">
        <field name="name">isrl.retention.account.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat_ret_id']" position="after">
                <field name="isrl_ret_id" readonly="1" string="ISLR" invisible="move_type=='entry'"/>
                <field name="isrl_ret_aux_id" readonly="0" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="isrl_concept_isrl_id_view_form2" model="ir.ui.view">
        <field name="name">isrl.retention.account.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']" position="before">
                <field name="concept_isrl_id" force_save="1" string="ISLR Concepto"/>
            </xpath>
        </field>
    </record> 
    
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//label[@for='list_price']" position="before">
                <field name="concept_isrl_id" force_save="1" string="ISLR Concepto"/>
            </xpath>
        </field>
    </record>

</odoo>
