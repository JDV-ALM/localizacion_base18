<odoo>
    <record id="view_libro_inventario_wizard" model="ir.ui.view">
        <field name="name">libro.inventario.wizard.form</field>
        <field name="model">libro.inventario.wizard</field>
        <field name="arch" type="xml">
            <form string="Libro de Inventario">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Imprimir" type="object" name="print_report" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- AcciÃ³n para abrir el wizard en una ventana emergente -->
    <record id="action_libro_inventario_wizard" model="ir.actions.act_window">
        <field name="name">Libro de Inventario</field>
        <field name="res_model">libro.inventario.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
